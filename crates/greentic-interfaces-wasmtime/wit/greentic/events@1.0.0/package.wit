package greentic:events@1.0.0;

interface events-v1 {
  /// Envelope shared by runner telemetry streams.
  record envelope {
    id: string,
    created-at-utc: string,
    tenant-id: string,
    flow-id: string,
    node-id: string,
    /// "start"|"end"|"error"|"log"|"mock"
    kind: string,
    /// Redacted JSON payload.
    payload-json: string,
  }
}

world events {
  export events-v1;
}
