package greentic:component-v1@0.1.0;

interface component-api {
  use greentic:common-types/types@0.1.0.{tenant-ctx, component-outcome};

  /// Invocation envelope for a component operation.
  record component-invoke-request {
    tenant: tenant-ctx,
    component-id: string,
    operation: option<string>,
    input-json: string,
  }

  /// Invoke a component by id/operation with JSON input.
  invoke: func(req: component-invoke-request) -> component-outcome;
}

world component-host {
  export component-api;
}
